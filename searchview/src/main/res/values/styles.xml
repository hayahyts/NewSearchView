<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="ImageButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/dp12</item>
        <item name="android:paddingRight">@dimen/dp12</item>
    </style>

    <!-- List Item Styling -->
    <style name="ListItemPrimaryText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textColor">@color/colorBlack87</item>
    </style>

</resources>